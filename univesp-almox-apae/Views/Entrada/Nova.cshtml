@{
    ViewData["Title"] = "Nova entrada";
}

@model NovaEntradaViewModel




<form method="post" asp-action="Nova" asp-controller="Entrada">
    <div class="row mb-3">
        <div class="col-4">
            <span>Data</span>
            <input type="date" asp-for="Data" class="form-control" />
            <span asp-validation-for="Data" class="text-danger"></span>
        </div>
        <div class="col-4">
            <span>Fornecedor</span>
            <input asp-for="Fornecedor" class="form-control"  />
            <span asp-validation-for="Fornecedor" class="text-danger"></span>
        </div>
        <div class="col-4">
            <span>Documento Fornecedor</span>
            <input asp-for="DocumentoFornecedor" class="form-control" />
            <span asp-validation-for="DocumentoFornecedor" class="text-danger"></span>
        </div>
    </div>
    @for (int i = 0; i < Model.ItensEntradaModel.Count; i++)
    {
        <div class="row">
            <div class="col-3">
                <span> Material </span>
                <input asp-for="@Model.ItensEntradaModel[i].Material" />
                <span asp-validation-for="@Model.ItensEntradaModel[i].Material"></span>
            </div>
            <div class="col-3">
                <span> Medida </span>
                <input asp-for="@Model.ItensEntradaModel[i].Medida" />
                <span asp-validation-for="@Model.ItensEntradaModel[i].Medida"></span>
            </div>
            <div class="col-3">
                <span> Quantidade </span>
                <input asp-for="@Model.ItensEntradaModel[i].Quantidade" />
                <span asp-validation-for="@Model.ItensEntradaModel[i].Quantidade"></span>
            </div>
        </div>
    }
   <div class="row">
       <div class="col-3">
           <button type="submit" class="btn btn-primary">Cadastrar</button>
       </div>
   </div>
</form>