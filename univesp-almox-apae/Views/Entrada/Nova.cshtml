@{
    ViewData["Title"] = "Nova entrada";
}

@model NovaEntradaViewModel

<h1>nova entrada</h1>

<form method="post" asp-action="Nova" asp-controller="Entrada">
    <div class="row mb-3">
        <div class="col-4">
            <span>Data</span>
            <input type="date" asp-for="Data" class="form-control" />
            <span asp-validation-for="Data" class="text-danger"></span>
        </div>
        <div class="col-4">
            <span>Fornecedor</span>
            <input asp-for="Fornecedor" class="form-control"  />
            <span asp-validation-for="Fornecedor" class="text-danger"></span>
        </div>
        <div class="col-4">
            <span>Documento Fornecedor</span>
            <input asp-for="DocumentoFornecedor" class="form-control" />
            <span asp-validation-for="DocumentoFornecedor" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            <button type="button" id="novo-item" class="btn btn-outline-dark">Novo item</button>
        </div>
    </div>
    <span asp-validation-for="ItensEntradaModel" class="text-danger"></span>
    <div id="itens-entrada"></div>
   <div class="row">
       <div class="col-3">
           <button type="submit" class="btn btn-primary">Cadastrar</button>
       </div>
   </div>
</form>


@section scripts {
    <script asp-append-version="true">
        let indice = 0;
        let urlBaseNovoItem = "@Url.Action("Item", "Entrada")"

        $("#novo-item").click(function() {
            let url = urlBaseNovoItem + `?indice=${indice}`;

            $.ajax({
                type: "GET",
                url: url,
                success: function (data) {
                    $('#itens-entrada').prepend(data);
                    indice++;
                },
            });
        })
    </script>
}



