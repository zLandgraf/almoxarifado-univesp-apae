@{
    ViewData["Title"] = "Nova saída";
}

@model NovaSaidaViewModel

<div class="row justify-content-center pb-3">
    <div class="paper bg-white col-8 page-container">
        <div class="card-header mb-3 border-bottom">
            <div class="col-12 d-flex align-items-center">
                <div class="page-header">
                    <i class="page-header-icon fa-solid fa-folder"></i>
                    <h5 class="page-header-title">Nova saída</h5>
                </div>
            </div>
        </div>
        <form method="post" asp-action="Nova" asp-controller="Saida" style="display: flex; flex-direction:column;flex-grow: 1">
            <input type="hidden" asp-for="EstoqueId" />
            <div class="card-body px-0 pt-2 pb-3">
                <div class="row mt-3">
                    <div class="col">
                        <label>Data</label>
                        <input type="date" asp-for="Data" class="form-control" />
                        <span asp-validation-for="Data" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col">
                        <label>Requisitante</label>
                        <input asp-for="Requisitante" class="form-control" />
                        <span asp-validation-for="Requisitante" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12 col-sm-6">
                        <label>Material</label>
                        <input type="hidden" asp-for="ItemSaidaViewModel.MaterialId" class="form-control" />
                        <input asp-for="ItemSaidaViewModel.Material" class="form-control bg-gray-100" readonly />
                        <span asp-validation-for="ItemSaidaViewModel.MaterialId" class="text-danger"></span>
                    </div>
                    <div class="col-6 col-sm-3 mt-3 mt-sm-0">
                        <label>Medida</label>
                        <input type="hidden" asp-for="ItemSaidaViewModel.MedidaId" class="form-control" />
                        <input asp-for="ItemSaidaViewModel.Medida" class="form-control bg-gray-100" readonly />
                        <span asp-validation-for="Requisitante" class="text-danger"></span>
                    </div>
                    <div class="col-6 col-sm-3 mt-3 mt-sm-0">
                        <label>Quantidade</label>
                        <input asp-for="ItemSaidaViewModel.Quantidade" class="form-control" />
                        <span asp-validation-for="Requisitante" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center pt-3">
                <a onclick="history.go(-1); return false;" class="btn btn-secondary me-2">
                    Voltar
                </a>
                <button type="submit" class="btn btn-primary">
                    Salvar
                </button>
            </div>
        </form>
    </div>
</div>