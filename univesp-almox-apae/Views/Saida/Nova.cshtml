@{
    ViewData["Title"] = "Nova saída";
}

@model NovaSaidaViewModel

<form method="post" asp-action="Nova" asp-controller="Saida">
    <input type="hidden" asp-for="EstoqueId" />
    <div class="row">
        <div class="col-12 col-lg-8 mx-auto my-5">
            <div class="card multisteps-form__panel p-3 border-radius-xl bg-white" data-animation="FadeIn">
                <h5 class="font-weight-bolder">Nova saída</h5>
                <div class="multisteps-form__content">
                
                    <div class="row mt-3">
                        <div class="col">
                            <label>Data</label>
                            <input type="date" asp-for="Data" class="form-control" />
                            <span asp-validation-for="Data" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col">
                            <label>Requisitante</label>
                            <input asp-for="Requisitante" class="form-control" />
                            <span asp-validation-for="Requisitante" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12 col-sm-6">
                            <label>Material</label>
                            <input type="hidden"asp-for="ItemSaidaViewModel.MaterialId" class="form-control" />
                            <input asp-for="ItemSaidaViewModel.Material" class="form-control" />
                            <span asp-validation-for="ItemSaidaViewModel.MaterialId" class="text-danger"></span>
                        </div>
                        <div class="col-6 col-sm-3 mt-3 mt-sm-0">
                            <label>Medida</label>
                            <input type="hidden" asp-for="ItemSaidaViewModel.MedidaId" class="form-control" />
                            <input asp-for="ItemSaidaViewModel.Medida" class="form-control" />
                            <span asp-validation-for="Requisitante" class="text-danger"></span>
                        </div>
                        <div class="col-6 col-sm-3 mt-3 mt-sm-0">
                            <label>Quantidade</label>
                            <input asp-for="ItemSaidaViewModel.Quantidade" class="form-control" />
                            <span asp-validation-for="Requisitante" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="button-row d-flex mt-4">
                        <button class="btn btn-secondary mb-0" type="button" title="Prev">
                            Voltar
                        </button>
                        <button class="btn btn-primary ms-auto mb-0" type="submit" title="Next">
                            Salvar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>