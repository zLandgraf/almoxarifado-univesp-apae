@{
    ViewData["Title"] = "Estoque atual";
}
@model List<EstoqueViewModel>

<table>
    <thead>
        <tr>
            <td>#</td>
            <td>Material</td>
            <td>Medida</td>
            <td>Quantidade</td>
            <td>Opções</td>
        </tr>
    </thead>
    <tbody>
        @if(Model != null && Model.Any()) 
        {
            @foreach (var (estoque, index) in Model.Select((estoque, index) => (estoque, index)))
            {
                <tr>
                    <td>@(index+1)</td>
                    <td>@estoque.Material</td>
                    <td>@estoque.Medida</td>
                    <td>@estoque.Quantidade</td>
                    <td>
                        <a asp-action="Nova" asp-controller="Saida" asp-route-estoqueId="@estoque.Id">Saída</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>