<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de integração da folha</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&amp;display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/almox.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    @await RenderSectionAsync("css", required: false)
</head>
<body>
    @Html.AntiForgeryToken()
    <nav class="sb-topnav navbar navbar-expand navbar-light shadow-md px-3">
        <div style="display:flex;flex-grow:1;align-items:center" class="ps-3">
            <button class="btn btn-link btn-sm pt-2" id="sidebarToggle" href="#!">
                <i class="fas fa-bars text-white" style="font-size:1.25rem"></i>
            </button>
            <a class="navbar-brand ms-2 text-white">
                Patrimônio
            </a>
        </div>
        <span class="me-3 text-white" style="color:#343a40;font-weight:200;font-size:0.95rem">
            Olá, @User?.Identity?.Name !
        </span>
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-white" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <div class="rounded-circle img-usuario">
                        <svg viewBox="0 0 36 36" fill="none" role="img" xmlns="http://www.w3.org/2000/svg" width="32" height="32"><title>Elizabeth Cady</title><mask id="mask__beam" maskUnits="userSpaceOnUse" x="0" y="0" width="36" height="36"><rect width="36" height="36" rx="72" fill="#FFFFFF"></rect></mask><g mask="url(#mask__beam)"><rect width="36" height="36" fill="#519548"></rect><rect x="0" y="0" width="36" height="36" transform="translate(7 7) rotate(333 18 18) scale(1)" fill="#bef202" rx="6"></rect><g transform="translate(3.5 3.5) rotate(-3 18 18)"><path d="M13,19 a1,0.75 0 0,0 10,0" fill="#000000"></path><rect x="11" y="14" width="1.5" height="2" rx="1" stroke="none" fill="#000000"></rect><rect x="23" y="14" width="1.5" height="2" rx="1" stroke="none" fill="#000000"></rect></g></g></svg>
                    </div>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li>
                        <a class="dropdown-item"
                           asp-page="/login"
                           asp-page-handler="logout">
                            Sair
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-light" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Principal</div>
                        <a class="nav-link @Html.HoverController("Estoque")" asp-action="Index" asp-controller="Estoque">
                            <div class="sb-nav-link-icon">
                                <i class="fas fa-box-open"></i>
                            </div>
                            Estoque
                        </a>
                        <div class="sb-sidenav-menu-heading">
                            Administração
                        </div>
                        <a class="nav-link @Html.HoverController("Entrada")" asp-action="Index" asp-controller="Entrada">
                            <div class="sb-nav-link-icon">
                                <i class="fa-solid fa-file-circle-plus"></i>
                            </div>
                            Entradas
                        </a>
                        <a class="nav-link @Html.HoverController("Saida")" asp-action="Index" asp-controller="Saida">
                            <div class="sb-nav-link-icon">
                                <i class="fa-solid fa-user-group"></i>
                            </div>
                            Saídas
                        </a>
                        <div class="sb-sidenav-menu-heading">
                            Dados e informações
                        </div>
                        <a class="nav-link  @Html.HoverController("Relatorio")" asp-action="Relatorio" asp-controller="Index">
                            <div class="sb-nav-link-icon">
                                <i class="fa-regular fa-file"></i>
                            </div>
                            Relatórios
                        </a>
                    </div>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main class="px-5 pt-4">
                @RenderBody()
            </main>
            <div id="modais"></div>
        </div>
    </div>
    <partial name="_libJS" />
    @await RenderSectionAsync("scripts", required: false)
</body>
</html>